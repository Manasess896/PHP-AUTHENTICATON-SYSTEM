# MongoDB Settings
DB_USERNAME=username
DB_PASSWORD=password
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/auth?retryWrites=true&w=majority
JWT_SECRET=replace_with_generated_secret_key
MONGODB_DATABASE=auth

# Application Settings
APP_NAME=authBoost
APP_ENV=development
APP_URL=http://localhost/auth
APP_DEBUG=true

# Mail Settings - Updated with consistent naming
MAIL_MAILER=smtp
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your.email@example.com
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your.email@example.com
MAIL_FROM_NAME="AuthBoost Verification"

# Debug settings
MAIL_DEBUG_LEVEL=2
ENABLE_LOGGING=false

# reCAPTCHA Settings
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Rate Limiting Settings
MAX_REGISTRATION_ATTEMPTS=5
REGISTRATION_TIME_WINDOW=3600
MAX_LOGIN_ATTEMPTS=10
LOGIN_TIME_WINDOW=900
MAX_PASSWORD_RESET_ATTEMPTS=3
PASSWORD_RESET_TIME_WINDOW=3600
MAX_RESEND_ATTEMPTS=3
RESEND_TIME_WINDOW=1800
API_MAX_REQUESTS=60
API_TIME_WINDOW=60
GLOBAL_MAX_REQUESTS=300
GLOBAL_TIME_WINDOW=60
